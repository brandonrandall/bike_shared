<link rel='stylesheet' href='conditions.css'/>

<div>
  <ul class='nav-bar'>
    <li>
      <a href="/">Home</a>
    </li>
    <li>
      <a href="/stations">Stations</a>
    </li>
    <li>
      <a href="/conditions">Weather Conditions</a>
    </li>
    <li>
      <a href="/trips">Trips</a>
    </li>
    <li style="float:right">
      <h1>CONDITIONS</h1>
    </li>
  </ul>
</div>

<div class="conditions-page">
  <form class="conditions-page_new_condition_button" action="/conditions/new" >
    <input type="submit" value="Add a Condition">
  </form>

  <% @conditions.each do |condition| %>
    <div class="each-condition">
      Date: <%= condition.date %><br>
      Precipitaion: <%= condition.precipitation %>
      Mean Temperature: <%= condition.mean_temp %><br>
    </div>
  <% end %>
  <div class="paginate">
    <%= will_paginate @conditions %>
  </div>
</div>
